@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<WTechECommerce.UI.Models.AdminUserVM>

<table class="table">
  <thead>
      <tr>
          <th scope="col">#</th>
          <th scope="col">Id</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Şifre</th>
          <th scope="col"></th>
      </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
     {
      <tr>

          <td>@item.Id</td>
          <td>@item.Email</td>
          <td>@item.Role</td>
          <td>@item.Password</td>


          <td>
              <a href="AdminUser/Update/@item.Id">
                  <input class="btn btn-primary" type="button" value="Update" />
              </a>

              <a href="AdminUser/Delete/@item.Id">
                  <input class="btn btn-primary" type="button" value="Delete" />
              </a>
             
          </td>
      </tr>   
     }
  </tbody>
</table>